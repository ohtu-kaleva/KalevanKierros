<div class="col-md-6">
    <div class="bs-component">
        <br/>
        <h2>Kirjaudu sisään</h2>
        <br/>
        <%= bootstrap_form_tag url: sessions_path(redirect: @redirect, id: @id) do |f| %>
            <%= f.text_field :username, label: "Käyttäjätunnus: " %>
            <%= f.password_field :password, label: "Salasana: " %>
            <h1><%= f.submit "Kirjaudu sisään", class: "btn btn-primary" %></h1>
        <% end %>
    </div>
    <p>
        <%= link_to 'Unohditko salasanasi?', new_password_reset_path %><br/>
        <a href="mailto:kayttajatunnus@kalevankierros.fi?subject=[KK]Unohdin käyttäjätunnukseni">Unohditko käyttäjätunnuksesi?</a>
    </p>
    <p>
        <br/>
        Oletko uusi kiertäjä?<br/>
        <%= link_to 'Rekisteröidy kiertäjäksi', signup_path, :class => "btn btn-default" %>
    </p>
</div>
