<div class="col-lg-12">
  <div style="float: left; clear: both; margin-top: 5px; width: 100%;">
  <% if params[:sort] == "name" %>
    <a href="?" class="btn btn-default btn-sm">Näytä sijoituksen mukaan</a>&nbsp;
    <a href="?sort=name" class="btn btn-primary btn-sm">Näytä aakkosjärjestyksessä</a>
  <% else %>
    <a href="?" class="btn btn-primary btn-sm">Näytä sijoituksen mukaan</a>&nbsp;
    <a href="?sort=name" class="btn btn-default btn-sm">Näytä aakkosjärjestyksessä</a>
  <% end %>
  </div>

  <%= will_paginate @statistics, renderer: BootstrapPagination::Rails %>
  <table class="table table-bordered" width="100%">
    <tr>
      <th>Sijoitus</th>
      <th>Kiertäjänumero</th>
      <th>Sukunimi</th>
      <th>Etunimi</th>
      <th>Kotipaikka</th>
      <th>Vuosi</th>
      <th>P</th>
      <th>Edel. vuonna yht.</th>
      <th>Edel. vuonna pisteitä</th>
      <th>6</th>
      <th>5</th>
      <th>4</th>
      <th>Yht.</th>
      <th>Pisteet</th>
      <th>A.viiri</th>
      <th>AP</th>
      <th>Kunniak.nro</th>
      <th>Veljeskunnan jäsennumero</th>
    </tr>
    <% @statistics.each do |statistic| %>
        <tr>
	  <td><%= statistic.position %></td>
          <td><b><%= link_to "#{statistic.kk_number}", statistic_path(statistic.id) %></b></td>
          <td><%= statistic.last_name %></td>
          <td><%= statistic.first_name %></td>
          <td><%= statistic.city %></td>
          <td><%= statistic.birth_year %></td>
          <td><%= statistic.p %></td>
          <td><%= statistic.prev_year_event_sum %></td>
          <td><%= statistic.prev_year_pts_sum %></td>
          <td><%= statistic.six_events_completed_count %></td>
          <td><%= statistic.five_events_completed_count %></td>
          <td><%= statistic.four_events_completed_count %></td>
          <td><%= statistic.total_events_completed %></td>
          <td><%= statistic.pts_sum.round(2) %></td>
          <td><%= statistic.a %></td>
          <td><%= statistic.ap %></td>
          <td><%= statistic.k %></td>
          <td><%= statistic.v %></td>
        </tr>
    <% end %>
  </table>
  <%= will_paginate @statistics, renderer: BootstrapPagination::Rails %>
</div>
