<%= bootstrap_form_for(@event_attribute) do |f| %>
    <% if @event_attribute.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event_attribute.errors.count, "error") %> prohibited this event_attribute from being
            saved:</h2>

          <ul>
            <% @event_attribute.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.text_field :name, label: 'Kysymyksen tunniste (ei näy lomakkeella)' %>
    </div>
    <div class="field">
      <%= f.select :attribute_type, options_for_select(@attribute_types), label: 'Valitse kysymyksen tyyppi' %>
    </div>
    <div class="field">
        <%= f.text_field :attribute_label, label: 'Kysymyksen otsikko (näkyy monivalinta, alasvetovalikko, tekstikenttä ja päivämääräksymyksissä)' %>
    </div>
    <div class="field">
      <%= f.text_field :attribute_value, label: 'Kirjoita valintavaihtoehdot puolipisteellä eroteltuna:' %>
    </div>
    <div>
        <label>Kirjoita valintaan liittyvä maksu sentteinä.</label>
        <span>Monivalinnan tapauksessa anna maksu puolipisteellä eroteltuna vastaavassa järjestyksessä kuin yllä. Jos valintaan ei liity maksua, voit jättää seuraavat tyhjäksi.</span>
        <span class="field">
          <%= f.text_field :payment_value, label: 'Normaali ilmoittautuminen (sentteinä):' %>
        </span>
        <span class="field">
          <%= f.text_field :second_payment_value, label: 'Jälki-ilmoittautuminen (sentteinä):' %>
        </span>
    </div>

    <%= f.hidden_field :event_id, :value => params[:event_id] %>

    <div class="actions">
      <%= f.submit 'Lisää kenttä ilmoittautumislomakkeeseen' %>
    </div>
<% end %>